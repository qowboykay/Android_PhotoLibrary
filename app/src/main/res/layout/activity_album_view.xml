<!-- res/layout/activity_album_view.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AlbumViewActivity">

    <TextView
        android:id="@+id/textViewAlbumView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/album_view"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/horizontalButtonsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewAlbumView"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/backButton"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:text="@string/back" />

        <LinearLayout
            android:layout_width="118dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/deleteButton"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:text="@string/delete" />

            <Button
                android:id="@+id/addButton"
                android:layout_width="100dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:text="@string/add" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/recaptionButton"
                android:layout_width="114dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:text="@string/recaption" />

            <Button
                android:id="@+id/searchButton"
                android:layout_width="114dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:text="@string/search" />
        </LinearLayout>

    </LinearLayout>

    <GridLayout
        android:id="@+id/pictureGrid"
        android:layout_width="357dp"
        android:layout_height="433dp"
        android:layout_below="@id/horizontalButtonsLayout"
        android:layout_marginTop="14dp"
        android:columnCount="5"
        android:rowCount="5">
    </GridLayout>

    <View
        android:id="@+id/emptySpace"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_below="@id/pictureGrid"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"/>
</RelativeLayout>
